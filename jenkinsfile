pipeline {
    agent any

    environment {
        NODE_VERSION = '22.11.0'
    }

    tools {
        nodejs 'nodejs-22.11.0'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/nehajain221292/nodejs.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'npm install'  // Use 'bat' instead of 'sh' for Windows
            }
        }

        stage('Run Tests') {
            steps {
                bat 'npm test'  // Again, use 'bat' for Windows
            }
        }

        stage('Build Application') {
            steps {
                bat 'npm run build'
            }
        }

        stage('Deploy Application') {
            steps {
                bat 'npm start'  // Use 'start' to run background tasks on Windows
            }
        }
    }

    post {
        success {
            echo 'Build and deployment succeeded!'
        }
        failure {
            echo 'Build or deployment failed.'
        }
        always {
            echo 'Cleaning up or archiving logs.'
        }
    }
}
